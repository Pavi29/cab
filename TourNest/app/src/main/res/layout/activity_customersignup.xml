<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    tools:context=".customersignup">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app.cardCornerRadius="10dp"
        app.cardElavation="3dp"
        app.cardPreventCornerOverlap="false"
        app.cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:src=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="SIGN UP"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <RelativeLayout
                android:id="relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@id+/uni"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/usernameicon"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id+/uni"
                    android:layout_alignParenttop="true"
                    android:layout_toRightOf="@id+/uni"
                    android:background="@color/editTextBG"
                    android:hint="Username"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id+/relativeLayout1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@id+/phone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/phone"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id+/phone"
                    android:layout_alignParenttop="true"
                    android:layout_toRightOf="@id+/phone"
                    android:background="@color/editTextBG"
                    android:hint="Phone Number"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id+/relativeLayout2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@id+/email"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/email"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id+/email"
                    android:layout_alignParenttop="true"
                    android:layout_toRightOf="@id+/email"
                    android:background="@color/editTextBG"
                    android:hint="Email"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id+/relativeLayout3"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@id+/pwd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/passwordlock"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id+/pwd"
                    android:layout_alignParenttop="true"
                    android:layout_toRightOf="@id+/pwd"
                    android:background="@color/editTextBG"
                    android:hint="Password"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id+/relativeLayout4"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@id+/confirm"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/passwordlock"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id+/confirm"
                    android:layout_alignParenttop="true"
                    android:layout_toRightOf="@id+/confirm"
                    android:background="@color/editTextBG"
                    android:hint="Confirm Password"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <CheckBox
                android:id="@id+/checkbox1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id+/relativeLayout5"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="sans-serif-medium"
                android:text="I agree to the terms of Tour Nest"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@id+/button_sign_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id+/checkbox1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="SIGN UP"
                android:fontFamily="sans-serif-medium"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>